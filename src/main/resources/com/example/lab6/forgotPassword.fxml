<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab6.ForgotPasswordController">
    <children>
        <Label layoutX="64.0" layoutY="49.0" prefHeight="64.0" prefWidth="390.0" text="Forgot your password?" textFill="#6d1ff2">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
        <Label layoutX="149.0" layoutY="142.0" text="Please enter your username and new password." textFill="#6d1ff2">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <TextField fx:id="usernameReset" layoutX="259.0" layoutY="233.0" prefHeight="44.0" prefWidth="283.0" promptText="Your username">
            <font>
                <Font size="18.0" />
            </font>
        </TextField>
        <Button layoutX="259.0" layoutY="399.0" mnemonicParsing="false" onAction="#onResetPasswordButtonClicked" style="-fx-background-color: #6d1ff2;" text="Request password reset" textFill="#f5f2f2">
            <font>
                <Font size="24.0" />
            </font>
        </Button>
        <Label layoutX="336.0" layoutY="472.0" onMouseClicked="#onBackToSignInButtonClicked" prefHeight="27.0" prefWidth="128.0" styleClass="forgetBtn" stylesheets="@styleshit.css" text="Back to sign in" textFill="#767676">
            <font>
                <Font size="18.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Label>
        <TextField fx:id="passwordReset" layoutX="259.0" layoutY="300.0" prefHeight="44.0" prefWidth="283.0" promptText="New password">
            <font>
                <Font size="18.0" />
            </font>
        </TextField>
        <Label fx:id="resetError" layoutX="310.0" layoutY="361.0" prefHeight="20.0" prefWidth="275.0" textFill="#ff2626">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
